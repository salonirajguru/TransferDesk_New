

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Transfer Desk</title>

    <link href="~/Content/Site.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    @Styles.Render("~/bundles/styles")
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript"> var AppPath = '@Url.Content("~/")' </script>
    <style>
        .colorpad {
            color: black;
            font-family: Arial;
            font-size: 15px;
        }
        ul.nav a:hover {
            color: white !important;
            background-color: #b2b2b2;
        }
        ul.nav > li > a:hover, ul.nav > li > a:focus {
            background-color: #b2b2b2;
            color: white !important;
        }
        .nav .caret {
            border-top-color: black;
            border-bottom-color: black;
        }
     
  
    </style>
</head>
<body>
  
    <div class="navbar navbar-fixed-top collapse navbar-collapse" style="background-color:whitesmoke;">
        <div class="container" style="height:65px;">
            <br />
            <div class="navbar-header">

                <p style="display:inline;">
                    <img src="~/Images/Springer-Nature.jpg" width="250px" height="35px" title="Springer Logo" />
                    <span class="heading" style="padding-left:200px">Manuscript Service</span>
                    <span style="padding-left:50px"></span>
                </p>
            </div>         
            <div class=" container-fluid" style="padding-left:40px;">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" style="padding-left:100px;">
                        @*<li>@Html.ActionLink("Home", "HomePage", "Manuscript", new { @class = "colorpad", })</li>*@                     
                        <li class="dropdown">
                            <a class="dropdown-toggle colorpad"
                               data-toggle="dropdown" >Admin<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("JournalMaster", "JournalMaster", "Admin")</li>
                                <li>@Html.ActionLink("JournalArticleType", "JournalArticleTypes", "Admin")</li>
                                <li>@Html.ActionLink("JournalSectionType", "JournalSectionTypes", "Admin")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("UserRoles", "UserRole", "UserRole")</li>
                            </ul>
                        </li>
                        @*<li>@Html.ActionLink("Services", "HomePage", "Manuscript", new { @class = "colorpad" })</li>*@
                    </ul>
                </div><!-- /.container -->
            </div>          
        </div>

    </div>   
  <br />
    
    <div class="container body-content">
        @RenderBody()
    </div>
    <br /><br /><br /><br />
    <br />
    <br />
    <br />

       <footer>
           <div class="col-md-11">
               <p align="center"> Copyright &copy; @DateTime.Now.Year | Springer Nature</p>
           </div>
           <div class="col-md-1">
               <p>MS v1.0.6</p>
           </div>
    </footer>
</body>

</html>
